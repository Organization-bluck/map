<!--components/CityList/cityList.wxml-->

<view class='citylist'>
  <view class='title' bindtap='slideup'>
    <text>{{listData.name}}</text>
    <view class='arrow' animation="{{animationData}}"></view>
  </view>
  <view class='city-list' wx:if="{{isShow}}">
    <block wx:for="{{listData.city}}" wx:for-index="idx" wx:for-item="cityitem">
      <view class='item {{isActive==cityitem.id?"active":""}}' data-index="{{cityitem.id}}" bindtap='selectItem'>{{ cityitem.name }}</view>
    </block> 
  </view>
</view>
